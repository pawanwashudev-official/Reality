        android:pathData="M-50,100 C50,150 150,50 250,120 S350,200 450,150"
        android:strokeColor="#08FFFFFF"
        android:strokeWidth="2"
        android:fillColor="#00000000"/>

    <!-- Wave 2: Middle flow -->
