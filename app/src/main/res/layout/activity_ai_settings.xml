<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Standard Header -->
    <include
        android:id="@+id/include_header"
        layout="@layout/include_standard_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ==================== WIDGET VOICE SETTINGS ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Widget Settings"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto-start Voice Input"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start listening when opening from widget"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_widget_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ==================== IMAGE GENERATION SETTINGS ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Generation"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_image_models"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row with + button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saved Image Models"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_image_model"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/baseline_add_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="20dp"/>
                    </LinearLayout>

                    <!-- Saved image models list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_image_models"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI uses the selected provider to create images. Images saved to Pictures/Reality folder."
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="24dp"/>

            <!-- ==================== CHAT MODELS CARD ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Models"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_chat_models"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row with + button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Saved Models"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_chat_model"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/baseline_add_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="20dp"/>
                    </LinearLayout>

                    <!-- Saved models list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_chat_models"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Multiple models can be added. Select one as default for chat features."
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="24dp"/>

            <!-- ==================== WEB SEARCH ENGINE CARD ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web Search Engine"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search_engines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row with + button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tavily Search API"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_search_engine"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/baseline_add_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="20dp"/>
                    </LinearLayout>

                    <!-- Saved search engines list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_search_engines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI uses Tavily for real-time web search. Enter your API key to enable."
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="24dp"/>

            <!-- ==================== AI DATA ACCESS CARD ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Data Access"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable/disable what data the AI can access. Disabled tools are completely hidden from AI."
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="12dp"/>

                    <!-- MERGED HEALTH CONNECT ITEM -->
                    <LinearLayout
                        android:id="@+id/btn_health_access_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?selectableItemBackground"
                        android:paddingVertical="8dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_favorite_24"
                            app:tint="@color/accent_health"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health Connect"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Steps, Sleep, Calories"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>
                        
                        <View
                            android:layout_width="16dp"
                            android:layout_height="0dp"/>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_health_access"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginBottom="8dp"/>

                    <!-- Other Tools Recycler -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_tool_toggles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI requests tool schemas on-demand to minimize token usage."
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="24dp"/>

            <!-- ==================== NIGHTLY PROTOCOL MODEL CARD ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nightly Protocol Model"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_nightly_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row with + button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Selected Model"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_nightly_model"
                            style="@style/Widget.Material3.Button.TonalButton.Icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/baseline_add_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="20dp"/>
                    </LinearLayout>

                    <!-- Empty state -->
                    <TextView
                        android:id="@+id/tv_nightly_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No model set. Tap + to add."
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"/>

                    <!-- Nightly model display (single item) -->
                    <!-- Nightly models list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_nightly_models"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:visibility="gone"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="16dp"/>

                    <!-- Personalization Section (inside Nightly card) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Personalize AI"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"/>

                        <ImageView
                            android:id="@+id/btn_edit_introduction"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="6dp"
                            android:src="@drawable/baseline_edit_24"
                            app:tint="?attr/colorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Edit"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <!-- Saved personalization display -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_saved_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant"
                        app:strokeWidth="0dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_saved_introduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="?attr/colorOnSurface"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:id="@+id/btn_delete_introduction"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:padding="4dp"
                                    android:src="@drawable/baseline_delete_24"
                                    app:tint="?attr/colorError"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:contentDescription="Delete"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Edit form (hidden when saved) -->
                    <LinearLayout
                        android:id="@+id/layout_introduction_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tell AI about yourself"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_user_introduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3"
                                android:maxLines="5"
                                android:gravity="top"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your goals, studies, challenges. Used in system message."
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginTop="4dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save_introduction"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save Personalization"
                            android:textAllCaps="false"
                            app:cornerRadius="8dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only one model for nightly reflections. Delete to change."
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="24dp"/>

            <!-- ==================== ADD MODEL FORM (Hidden by default) ==================== -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
