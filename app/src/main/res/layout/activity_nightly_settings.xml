<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Gradient Glow at Top -->
    <View
        android:id="@+id/gradient_glow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_gradient_background"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nightly Settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Google Drive Setup -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Drive Setup"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Auto Setup Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_auto_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_cloud_24"
                        app:tint="?attr/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto Setup Folders"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Creates Reality, Daily Diary, Report folders"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Manual Setup -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manual_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manual Folder Links"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Reality Folder -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reality Folder URL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_reality_folder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Daily Diary Folder -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Daily Diary Folder URL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_diary_folder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Report Folder -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Report of the Day Folder URL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_report_folder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_folders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Folder Links"
                        android:textAllCaps="false"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Saved Folder IDs Display -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_saved_folders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved Folder IDs"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_saved_folder_ids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Verify Setup Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_verify_setup"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify All Connections"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_check_circle_24"
                android:layout_marginBottom="24dp"/>

            <!-- Section: Google Tasks Setup -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Tasks Setup"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Auto Create Task Lists -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_auto_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_task_alt_24"
                        app:tint="?attr/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto Setup Task Lists"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Creates or finds task lists"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Manual Task List Names -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_manual_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manual Task List Names"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Task List 1 Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task List 1 Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_task_list_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Task List 2 Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task List 2 Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_task_list_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_find_task_lists"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Find Task List IDs"
                        android:textAllCaps="false"
                        app:cornerRadius="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Saved Task List IDs Display -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_saved_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved Task List IDs"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_saved_task_ids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:fontFamily="monospace"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Danger Zone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danger Zone"
                android:textColor="@color/error_color"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_erase_setup"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Erase All Setup Data"
                android:textAllCaps="false"
                android:textColor="@color/error_color"
                app:strokeColor="@color/error_color"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_delete_24"
                app:iconTint="@color/error_color"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
