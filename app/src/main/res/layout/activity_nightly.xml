<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Pattern Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pattern_zen"
        android:alpha="0.6"/>

    <!-- Gradient Glow at Top -->
    <View
        android:id="@+id/gradient_glow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_gradient_background"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header with proper separation -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nightly Protocol"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="16dp"/>

        <!-- Report Icon -->
        <ImageView
            android:id="@+id/btn_report"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/baseline_description_24"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Daily Report"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btn_plan"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/baseline_event_24"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next Day Plan"
            android:layout_marginEnd="8dp"/>

        <!-- Settings Gear Icon -->
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/baseline_settings_24"
            app:tint="?attr/colorOnSurface"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Nightly Settings"/>
    </LinearLayout>

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="100dp">

            <!-- Big Moon/Night Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/baseline_bedtime_24"
                app:tint="?attr/colorPrimary"
                android:alpha="0.5"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"/>
                
            <!-- Date Selector Card (Transparent Glass style) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_date_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btn_prev_date"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="?attr/colorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"/>

                        <TextView
                            android:id="@+id/tv_selected_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today, January 18"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="center"/>

                        <ImageView
                            android:id="@+id/btn_next_date"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="?attr/colorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protocol Status"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_setup_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not started"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Steps Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Session Steps"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp"/>

            <!-- NEW: Steps RecyclerView (12 Dynamic Cards) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>

            <!-- OLD: Steps Container (set GONE, kept for reference during migration) -->
            <LinearLayout
                android:id="@+id/layout_steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Step 1: Data -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_sync_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1. Collect Daily Data"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_data"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>
                        
                        <TextView
                            android:id="@+id/tv_step_data_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Step 2: Questions -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_auto_awesome_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2. AI Reflection Questions"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_questions"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_step_questions_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                
                <!-- Step 3: Diary -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_diary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_edit_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="3. Write Diary"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_diary"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_step_diary_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Step 4: Analysis -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_auto_awesome_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="4. AI Analysis &amp; XP"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_analysis"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_step_analysis_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Step 5: Create Plan Doc -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_create_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_description_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="5. Create Plan Doc"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_create_plan"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_step_create_plan_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Step 6: Process Plan -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_step_process_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorSurfaceVariant"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_calendar_month_24"
                                app:tint="?attr/colorPrimary"/>
                                
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="6. Process Plan"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                android:textColor="?attr/colorOnSurface"/>
                                
                            <ImageView
                                android:id="@+id/icon_step_process_plan"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_radio_button_unchecked_24"
                                app:tint="?attr/colorOutline"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_step_process_plan_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pending..."
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp"
                            android:layout_marginTop="-8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Start/Analyze Button (Main Action) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_nightly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Tonight's Review"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                android:enabled="false"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

            <!-- Log Console Card (Always visible when needed, or toggled) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Execution Log"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                            android:id="@+id/btn_clear_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="clear"
                            android:textSize="11sp"
                            android:textColor="?attr/colorPrimary"
                            android:clickable="true"
                            android:focusable="true"
                            android:padding="4dp"/>
                    </LinearLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="?attr/colorSurface"
                        android:padding="8dp"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tv_execution_log"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ready to start..."
                            android:textSize="11sp"
                            android:fontFamily="monospace"
                            android:textColor="?attr/colorOnSurface"/>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
