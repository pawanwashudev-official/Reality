<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?android:colorBackground">

    <!-- Gradient Glow -->
    <View
        android:id="@+id/gradient_glow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_gradient_background"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/back_button_bg"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reflection Settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card: Data Retention -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Retention"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Keep Reflection &amp; XP Data For:"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_retention"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_bg"/>
                        
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assuming a rolling window. detailed breakdown data older than 7 days is automatically summarized."
                        android:textSize="12sp"
                        android:alpha="0.7"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Gamification Management -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gamification System"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level, Streak, &amp; XP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total XP, Level, and Streak automatically update."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp"/>

                    <!-- Section: Edit Level Presets -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Level Rules &amp; Presets"
                            android:textColor="?attr/colorPrimary"
                            android:textStyle="bold"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_open_level_editor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Levels"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:icon="@drawable/baseline_edit_24"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginBottom="16dp"/>

                    <!-- Section: Level List -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Level Overview (Scrollable)"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">
                        <TextView android:text="ID" android:width="30dp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Name" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:textStyle="bold"/>
                        <TextView android:text="XP" android:width="60dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:gravity="end"/>
                        <TextView android:text="Strk" android:width="40dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold" android:gravity="end"/>
                    </LinearLayout>

                    <!-- Scrollable List -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="?attr/colorSurfaceContainerLow"
                        android:fadeScrollbars="false">
                        <LinearLayout
                            android:id="@+id/ll_level_table_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">
                            <!-- Rows added dynamically -->
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Screen Time Limit -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_timer_24"
                            app:tint="@color/accent_block"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Screen Time Limit"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usage limit for Focus Mode apps in Blocklist"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_view_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tv_current_limit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Not set"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/btn_edit_limit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/baseline_edit_24"
                            app:tint="?attr/colorPrimary"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <!-- Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_edit_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                       <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="Minutes per day"
                            android:layout_marginEnd="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_screen_time_limit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:text="45"
                                android:maxLength="4"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_save_screen_limit"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:textAllCaps="false"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_screen_limit_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Under limit: Bonus XP\n• Over limit: Penalty XP"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_affected_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Applied to: Loading..."
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_limit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:trackCornerRadius="4dp"
                        android:progress="0"
                        app:indicatorColor="?attr/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_limit_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculating usage..."
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:gravity="end"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Data Management -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_delete_24"
                            app:tint="?attr/colorError"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Management"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage your gamification history"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_xp_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delete XP Data"
                        android:textColor="?attr/colorOnError"
                        app:backgroundTint="?attr/colorError"
                        style="@style/Widget.Material3.Button.TonalButton"/>
                        
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
