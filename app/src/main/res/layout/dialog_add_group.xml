<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Time Limit"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <SeekBar
            android:id="@+id/sliderLimit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="480"
            android:progress="60"/>
        <TextView
            android:id="@+id/tvLimitValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h 0m"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSelectApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Apps"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="16dp"/>
    
    <TextView
        android:id="@+id/tvSelectedApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 apps selected"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnActivePeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Active Period (Optional)"
        style="?attr/materialButtonOutlinedStyle"/>
        
    <TextView
        android:id="@+id/tvActivePeriodResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not set"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBodySmall"/>

    <CheckBox
        android:id="@+id/cbStrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Strict Mode (Cannot Delete)"
        android:layout_marginTop="16dp"/>

</LinearLayout>
