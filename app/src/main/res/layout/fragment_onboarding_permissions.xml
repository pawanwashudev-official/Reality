<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onboarding_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Setup Permissions"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/onboarding_text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reality needs these permissions to protect your focus. Tap each card to grant."
            android:textSize="14sp"
            android:textColor="@color/onboarding_text_secondary"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="32dp" />

        <!-- 1. Accessibility Service (CRITICAL) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_accessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/onboarding_card_bg"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/onboarding_card_stroke"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_accessibility"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_accessibility_24"
                        app:tint="@color/onboarding_icon_pending" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accessibility Service"
                                android:textColor="@color/onboarding_text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  REQUIRED"
                                android:textColor="#FF5252"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detects which app you're using to block distractions"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow_accessibility"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="@color/onboarding_accent" />
                </LinearLayout>

                <!-- Detailed Explanation (collapsible) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/onboarding_divider_top"
                    android:text="ðŸ” How it works: When you open Instagram, Reality sees this and checks if it should be blocked. Without this, we cannot detect app switches.\n\nðŸ”’ Privacy: We ONLY detect the app name. We cannot read your messages, passwords, or any content."
                    android:textColor="@color/onboarding_text_hint"
                    android:textSize="11sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. Display Over Other Apps -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/onboarding_card_bg"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/onboarding_card_stroke"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_overlay"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_layers_24"
                        app:tint="@color/onboarding_icon_pending" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display Over Apps"
                                android:textColor="@color/onboarding_text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  REQUIRED"
                                android:textColor="#FF5252"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shows block screens when you try to open blocked apps"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow_overlay"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="@color/onboarding_accent" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/onboarding_divider_top"
                    android:text="ðŸ›¡ï¸ How it works: When you open a blocked app, Reality shows a full-screen 'Blocked' message covering the app.\n\nðŸ”’ Privacy: Only used to display block screens. Nothing else."
                    android:textColor="@color/onboarding_text_hint"
                    android:textSize="11sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. Usage Stats -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_usage_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/onboarding_card_bg"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/onboarding_card_stroke"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_usage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_bar_chart_24"
                        app:tint="@color/onboarding_icon_pending" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Usage Statistics"
                                android:textColor="@color/onboarding_text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  REQUIRED"
                                android:textColor="#FF5252"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tracks app usage time for limits and statistics"
                            android:textColor="@color/onboarding_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow_usage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="@color/onboarding_accent" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/onboarding_divider_top"
                    android:text="ðŸ“Š How it works: Reality reads how long you use each app to enforce daily limits (e.g., '30 min Instagram per day').\n\nðŸ”’ Privacy: Data NEVER leaves your device. Used only for your statistics screen."
                    android:textColor="@color/onboarding_text_hint"
                    android:textSize="11sp"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. Notifications -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/onboarding_card_bg"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/onboarding_card_stroke"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_notifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_notifications_24"
                    app:tint="@color/onboarding_icon_pending" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="@color/onboarding_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alerts for focus sessions, reminders, and limits"
                        android:textColor="@color/onboarding_text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_notifications"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:tint="@color/onboarding_accent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 5. Battery Optimization -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_battery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/onboarding_card_bg"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/onboarding_card_stroke"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon_battery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_battery_saver_24"
                    app:tint="@color/onboarding_icon_pending" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery Optimization"
                        android:textColor="@color/onboarding_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prevents Android from killing Reality in background"
                        android:textColor="@color/onboarding_text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_battery"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_arrow_forward_24"
                    app:tint="@color/onboarding_accent" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 of 5 permissions granted"
                android:textColor="@color/onboarding_text_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Grant All Required Permissions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:backgroundTint="@color/onboarding_accent"
            app:cornerRadius="30dp"
            android:textColor="@android:color/black" />

        <!-- Skip Option -->
        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Skip for now (some features won't work)"
            android:textColor="@color/onboarding_text_hint"
            android:textSize="12sp"
            android:padding="8dp" />

        <!-- Privacy Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="ðŸ”’ All data stays on your device\nReality is 100% open source"
            android:textColor="@color/onboarding_text_hint"
            android:textSize="11sp"
            android:lineSpacingMultiplier="1.3" />

    </LinearLayout>
</ScrollView>
