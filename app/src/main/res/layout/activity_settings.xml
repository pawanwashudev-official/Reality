<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:fitsSystemWindows="true">

    <!-- Gradient Glow at Top -->
    <View
        android:id="@+id/gradient_glow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/dialog_gradient_background"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Standard Header -->
    <include
        android:id="@+id/include_header"
        layout="@layout/include_standard_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Profile Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_account_circle_24"
                        app:tint="?attr/colorOnSurface"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tv_account_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign in with Google"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_account_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sync Tasks, Docs &amp; Drive"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Essentials (Universal links) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Essentials"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Reminders -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_reminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_notifications_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminders"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage focus notifications"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Calendar -> Schedule Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_schedule_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule Settings"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage auto-focus Sync"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Core Blocking -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blocking"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Blocklist is managed from Home Page Focus Wall card -->

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_block_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_edit_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Block Screen Messages"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customize motivational quotes"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_auto_dnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_do_not_disturb_on_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto Do Not Disturb"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_dnd_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turn on DND when blocking starts"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_auto_dnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:enabled="false"
                        android:clickable="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reality Sleep Mode (Android 15+ Only) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reality_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_bedtime_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reality Sleep Mode"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_reality_sleep_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grayscale, Dim &amp; Dark Mode"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_reality_sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:enabled="false"
                        android:clickable="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Strict Mode -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_strict_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorError"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_lock_24"
                        app:tint="?attr/colorError" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Strict Mode"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_strict_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inactive"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Reality -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_info_24"
                        app:tint="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Reality"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Version info, credits and licenses"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI & Intelligence -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI &amp; Intelligence"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ai_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_query_stats_24"
                        app:tint="?attr/colorOnSurface"/>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Configuration"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setup Groq, OpenAI etc."
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nightly Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_nightly_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_bedtime_24"
                        app:tint="?attr/colorOnSurface"/>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nightly Settings"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configure Drive &amp; Tasks for nightly review"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reflection Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reflection_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_auto_awesome_24"
                        app:tint="?attr/colorOnSurface"/>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reflection Settings"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configure XP, Levels &amp; Screen Time"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tapasya Settings -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tapasya_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/baseline_timer_24"
                        app:tint="?attr/colorOnSurface"/>
                        
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tapasya Settings"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configure Focus Sessions"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Developer Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Terminal Log Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/baseline_terminal_24"
                            app:tint="?attr/colorOnSurface" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show Terminal Log"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display system logs on home screen"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_terminal_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
