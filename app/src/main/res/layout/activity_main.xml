<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <!-- Background Element -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"/>

    <!-- Pattern Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pattern_zen"
        android:alpha="0.6"/>

    <!-- Gradient Gradient (Top Glow) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/dialog_gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.2"/>

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back,"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reality"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_active_blocks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_shield_24"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/rounded_button_bg"
            android:layout_marginEnd="12dp"
            android:contentDescription="Active Blocks"/>

        <ImageView
            android:id="@+id/btn_reminders"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_notifications_24"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/rounded_button_bg"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_settings_24"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/rounded_button_bg"
            android:layout_marginEnd="12dp"/>

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/baseline_info_24"
            app:tint="?attr/colorOnSurface"
            android:background="@drawable/rounded_button_bg"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">
            <!-- Reflection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reflection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Progress"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="18sp"/>

                        <!-- Level Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/rounded_button_bg"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lv."
                                android:textColor="?attr/colorPrimary"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/tv_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- XP and Streak Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Total XP -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_total_xp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="24sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total XP"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"/>
                        </LinearLayout>

                        <!-- Today XP -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_today_xp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+0"
                                android:textColor="@color/accent_focus"
                                android:textStyle="bold"
                                android:textSize="24sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today XP"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"/>
                        </LinearLayout>

                        <!-- Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/baseline_bolt_24"
                                    app:tint="@color/accent_block"/>

                                <TextView
                                    android:id="@+id/tv_streak"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/accent_block"
                                    android:textStyle="bold"
                                    android:textSize="24sp"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day Streak"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Study Time Progress -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/baseline_timer_24"
                                app:tint="?attr/colorPrimary"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Study Time"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp"/>

                            <TextView
                                android:id="@+id/tv_study_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 0 min"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progress_study_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:indicatorColor="?attr/colorPrimary"
                            app:trackColor="?attr/colorSurfaceVariant"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp"
                            android:max="100"
                            android:progress="0"/>
                    </LinearLayout>

                    <!-- View Progress Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_progress"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š View Progress Details"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconGravity="end"
                        android:layout_marginTop="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Emergency Card (Conditional) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_emergency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardBackgroundColor="?attr/colorErrorContainer"
                app:strokeColor="?attr/colorError"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_emergency"
                        app:tint="?attr/colorError"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency Mode"
                            android:textColor="?attr/colorOnErrorContainer"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                        
                        <TextView
                             android:id="@+id/tv_emergency_remaining"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Tap to activate break"
                             android:textColor="?attr/colorOnErrorContainer"
                             android:alpha="0.8"
                             android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_arrow_forward_24"
                        app:tint="?attr/colorError"/>
                </LinearLayout>
                <!-- Clickable overlay -->
                <View
                    android:id="@+id/btn_emergency_click"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?selectableItemBackground"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Focus Status / Start Focus -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFocusMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="@dimen/corner_radius_xl"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:id="@+id/tv_focus_card_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Focus Session"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp"
                                android:letterSpacing="0.05"/>

                            <TextView
                                android:id="@+id/tv_focus_card_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ready to Start"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Lottie Animation for 3D Feel -->
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_focus"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:lottie_rawRes="@raw/anim_placeholder"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/focusMode"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Start Focusing"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:backgroundTint="@color/accent_focus"
                        app:cornerRadius="28dp"
                        android:layout_marginTop="24dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Grid for Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="2">

                <!-- Usage Limit -> Digital Life -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_usage_limit"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="@dimen/corner_radius_large"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">
                        
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_query_stats_24"
                            app:tint="@color/accent_stats"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Digital Life"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                        
                        <TextView
                            android:id="@+id/tv_usage_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dashboard"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Blocklist -> Focus Wall -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/blocklistCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="@dimen/corner_radius_large"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_block_24"
                            app:tint="@color/accent_block"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Focus Wall"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blocked Apps"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Grid Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- App Limits -> App Constraints -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_app_limits"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="@color/accent_limits_container"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_timer_24"
                            app:tint="@color/accent_limits"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Constraints"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Limits"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Group Limits -> Category Limits -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_group_limits"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="@color/accent_groups_container"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/baseline_group_work_24"
                            app:tint="@color/accent_groups"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category Limits"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Limits"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 3: Schedules & Bedtime -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Schedules -> Auto-Focus -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/schedules"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="@dimen/corner_radius_medium"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="@color/accent_schedules_container"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_schedule_24"
                            app:tint="@color/accent_schedules"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Auto-Focus"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedules"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Bedtime -> Sleep Mode -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_bedtime"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:strokeColor="@color/accent_bedtime_container"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_bedtime_24"
                            app:tint="@color/accent_bedtime"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sleep Mode"
                                android:textColor="?attr/colorOnSurface"
                                android:textStyle="bold"
                                android:textSize="13sp"/>
                            <TextView
                                android:id="@+id/tv_bedtime_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bedtime"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <!-- Terminal Log -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="REALITY KERNEL"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"/>

                        <TextView
                            android:id="@+id/btn_terminal_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CLEAR"
                            android:textColor="?attr/colorError"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="?selectableItemBackground"
                            android:padding="4dp"/>
                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/terminal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:fillViewport="false">

                        <TextView
                            android:id="@+id/tv_terminal_log"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="> System Ready..."
                            android:textColor="?attr/colorPrimary"
                            android:fontFamily="monospace"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4dp"/>
                    </ScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- AI Chat FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ai_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_chat_24"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorPrimary"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="AI Chat"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>