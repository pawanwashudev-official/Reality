<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    tools:context=".ui.activity.LauncherActivity">

    <!-- Main Row -->
    <LinearLayout
        android:id="@+id/mainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/app_icon" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="app"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/btnExpand"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="Expand options" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Expandable Mode Selection Section -->
    <LinearLayout
        android:id="@+id/modeSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingStart="68dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorSurfaceVariant">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block during:"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="8dp" />

        <CheckBox
            android:id="@+id/cbFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Focus"
            android:textSize="14sp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbAutoFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Focus (Schedules)"
            android:textSize="14sp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbBedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedtime Mode"
            android:textSize="14sp"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar Events"
            android:textSize="14sp"
            android:checked="true" />

    </LinearLayout>

</LinearLayout>
