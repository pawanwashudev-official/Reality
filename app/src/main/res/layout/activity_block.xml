<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Abstract Background Blob (Optional, simpler solid black for now) -->
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/glass_card_bg"
            android:padding="32dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_block_24"
                app:tint="#FF5252"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Focused."
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blocked by Focus Mode"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHome"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Go Home"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="28dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/btnEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Access"
                android:textColor="#80FFFFFF"
                android:textSize="14sp"
                android:padding="8dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
