<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/md_theme_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Security Shield"
        android:src="@drawable/ic_security_shield"
        app:tint="@color/md_theme_primary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="World's Securest App"
        android:textColor="@color/md_theme_primary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:alpha="0.9"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Reality is designed with a zero-compromise approach to your privacy and security."
        android:textColor="@color/md_theme_onBackground"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/dialog_glass_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawablePadding="12dp"
            android:text="• 100% Offline: No internet permission"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_check_circle"
            app:drawableTint="@color/md_theme_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:drawablePadding="12dp"
            android:text="• Zero Data Collection: Your data never leaves"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_check_circle"
            app:drawableTint="@color/md_theme_primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            android:text="• unbreakable App Locks"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_check_circle"
            app:drawableTint="@color/md_theme_primary" />
            
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Enter your name"
        app:boxBackgroundColor="?attr/colorSurfaceContainerHigh"
        app:boxStrokeColor="@color/md_theme_primary"
        app:hintTextColor="@color/md_theme_onSurfaceVariant"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_onSurface"
            android:inputType="textPersonName"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:text="Disclaimer: Reality uses Accessibility Services exclusively to enforce blocking. No personal data is ever collected or transmitted." />

    <Button
        android:id="@+id/btnGetStarted"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/md_theme_primary"
        android:text="Get Started"
        android:textColor="@color/md_theme_onPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
