<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <include
        android:id="@+id/include_header"
        layout="@layout/include_standard_header"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Pattern Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pattern_zen"
        android:alpha="0.4"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include_header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/app_logo"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                android:elevation="8dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reality"
                android:textColor="?attr/colorOnSurface"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Update Check Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/baseline_system_update_24"
                        app:tint="?attr/colorPrimary"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check for Updates"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_update_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keep Reality at its best"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_update"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indicatorSize="20dp"
                        app:trackThickness="2dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Why Reality is Best Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/baseline_auto_awesome_24"
                            app:tint="?attr/colorPrimary"/>
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Why Reality is Best"
                            android:textColor="?attr/colorOnSurface"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unlike other blockers, Reality isn't just about saying NO. It's about saying YES to what matters."
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.4"
                        android:layout_marginBottom="16dp"/>

                    <!-- Feature: Smart Blocking -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ›¡ï¸" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Strict Mode Protection" android:textColor="?attr/colorOnSurface" android:textStyle="bold" android:textSize="14sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Unbreakable locks when you need willpower" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature: Calendar Sync -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“…" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calendar Integration" android:textColor="?attr/colorOnSurface" android:textStyle="bold" android:textSize="14sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Auto-focus during your meetings and events" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature: Usage Insights -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“Š" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Deep Usage Analytics" android:textColor="?attr/colorOnSurface" android:textStyle="bold" android:textSize="14sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Understand your habits with real data" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature: Smart Reminders -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ””" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Intelligent Reminders" android:textColor="?attr/colorOnSurface" android:textStyle="bold" android:textSize="14sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gentle nudges to stay on track" android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature: No Ads, Open Source -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ’Ž" android:textSize="20sp"/>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginStart="12dp">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100% Free &amp; Open Source" android:textColor="?attr/colorOnSurface" android:textStyle="bold" android:textSize="14sp"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No ads. No tracking. No subscriptions." android:textColor="?attr/colorOnSurfaceVariant" android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Philosophy Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OUR PHILOSOPHY"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="&quot;Technology should serve you, not consume you. Reality isn't just an appâ€”it's a movement towards digital mindfulness. We believe in reclaiming your attention, one focused session at a time.&quot;"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="15sp"
                        android:fontFamily="serif"
                        android:lineSpacingMultiplier="1.5"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Support Us Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSupportUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’š"
                        android:textSize="32sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support Reality"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help keep this app free, ad-free &amp; open source"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:textSize="13sp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSupportUs"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â¤ï¸ Support via UPI"
                        android:textSize="14sp"
                        app:cornerRadius="20dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Profile / Developer Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meet the Creator"
                        android:textColor="?attr/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Placeholder for Avatar if available, using initial for now -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/rounded_button_bg">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_gravity="center"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pawan Washudev"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Project Lead &amp; Developer"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="16dp"/>

                    <!-- Social Links Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <!-- GitHub -->
                        <LinearLayout
                            android:id="@+id/btn_github"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_code_24"
                                app:tint="?attr/colorOnSurface"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GitHub"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Website -->
                        <LinearLayout
                            android:id="@+id/btn_website"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_language_24"
                                app:tint="?attr/colorOnSurface"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Website"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Telegram -->
                        <LinearLayout
                            android:id="@+id/btn_telegram"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_send_24"
                                app:tint="?attr/colorOnSurface"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Telegram"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Arratai -->
                        <LinearLayout
                            android:id="@+id/btn_arratai"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_auto_awesome_24"
                                app:tint="?attr/colorOnSurface"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arratai"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Contact -->
                        <LinearLayout
                            android:id="@+id/btn_contact"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_email_24"
                                app:tint="?attr/colorOnSurface"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Legal / Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with â¤ï¸ for Focus"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:alpha="0.7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- App Logo & Version -->
            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/app_logo"
                android:layout_marginTop="32dp"/>

            <!-- Open Source Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Source"
                android:textColor="?attr/colorPrimary"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/btn_source_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Source Code on GitHub"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Privacy Policy -->
            <TextView
                android:id="@+id/btn_privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© 2026 Neubofy. All rights reserved."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Made with â¤ï¸ in India"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
