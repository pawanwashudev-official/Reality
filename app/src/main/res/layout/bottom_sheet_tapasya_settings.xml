<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="24dp"/>

    <!-- Target Time Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_timer_24"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Target Time"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_rest_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60m"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_target_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="60"
        android:valueTo="360"
        android:stepSize="15"
        android:value="60"
        app:labelBehavior="floating"
        android:layout_marginBottom="24dp"/>
    
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>

    <!-- Pause Limit Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_bedtime_24"
            app:tint="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pause Limit"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_pause_limit_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15m"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_pause_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="1"
        android:valueTo="30"
        android:stepSize="1"
        android:value="15"
        app:labelBehavior="floating"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"/>

    <!-- Calendar Source Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_sync_24"
            app:tint="?attr/colorOnSurface"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync Source"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"/>
            
            <TextView
                android:id="@+id/tv_sync_source_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Calendar"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="12sp"/>
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_sync_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:padding="12dp"
        app:cornerRadius="12dp"/>

</LinearLayout>
